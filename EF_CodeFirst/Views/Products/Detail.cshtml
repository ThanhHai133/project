@model EF_CodeFirst.Models.Product
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<h2>Detail</h2>

<table class="table">
    <tr>
        <th>Product ID</th>
        <td>@Model.ProductID</td>
    </tr>
    <tr>
        <th>Product Name</th>
        <td>@Model.ProductName</td>
    </tr>
    <tr>
        <th>Price </th>
        <td>@Model.Price.Value.ToString("C")</td>
    </tr>
    <tr>
        <th>Product Avail</th>
        <td>@Model.AvailabilityStatus</td>
    <tr>
        <th>Product Date</th>
        <td>@Model.DateOfPurchase.Value.ToString("dd/MM/yyyy")</td>
    </tr>
    <tr>
        <th>Product Categori</th>
        <td>@Model.CategoryID</td>
    </tr>
    <tr>
        <th>Product Brand</th>
        <td>@Model.BrandID</td>
    </tr>
    <tr>
        <th>Product Active</th>
        <td>@Model.Active</td>
    </tr>

</table>
<a class="btn btn-primary" href="@Url.Action("index","Products")">Back to list of products</a>


